<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:background="#8000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/kq_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="空气质量"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/aqi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/kq_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pm25_text"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/aqi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/aqi_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pm25_title"
        android:layout_gravity="center"
        android:text="AQI  指数"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/pm25_text"
        app:layout_constraintLeft_toRightOf="@+id/aqi_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/aqi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/pm25_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/aqi_title"
        app:layout_constraintTop_toBottomOf="@+id/pm25_text"
        app:layout_constraintLeft_toRightOf="@+id/aqi_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_gravity="center"
        android:paddingBottom="15dp"
        android:text="PM2.5指数"
        android:textColor="#fff" />


</android.support.constraint.ConstraintLayout>

